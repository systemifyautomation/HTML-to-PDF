[Unit]
Description=HTML to PDF Converter API
After=network.target

[Service]
Type=exec
User=root
Group=root
WorkingDirectory=/HTML-to-PDF
Environment="PATH=/HTML-to-PDF/venv/bin"
ExecStart=/HTML-to-PDF/venv/bin/gunicorn -w 4 -b 0.0.0.0:9000 --timeout 120 app:app
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
